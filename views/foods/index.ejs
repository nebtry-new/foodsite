<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <h1>Welcome to FoodSite!</h1>
        <p>View our hand-picked foods form all over the world</p>
        <p>
            <a class="btn btn-primary btn-lg" href="/foods/new">Add New food</a>
        </p>
    </header>
    
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <div class="col-lg-12">
            <h3>Our Most Popular foods!</h3>
        </div>
        <% foods.forEach(function(food){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= food.image %>">
                    <div class="caption">
                        <h4><%= food.name %></h4>
                    </div>
                    <p>
                        <a href="/foods/<%= food._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
    
    
    
</div>

<% include ../partials/footer %>